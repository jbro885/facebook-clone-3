  <div class="col-12 d-flex profile">
    <div class="profile-image">
      <%= gravatar_for user, size:40 %>
    </div>
    <div class="personal-info">
    <span class="user"><%= link_to user.full_name, user %></span>
    </div>
    <div>
        <% if current_page?(users_path) %>
            <%= form_for(@friendship, url: friendships_path) do |form| %>
            <%= render partial: 'friendships/friendship_form', locals: { f: form,  friend: user } %>
            <% end %>
        <% else %>
            <% friendship_requested = current_user.friendships.filter{|friendship| friendship.friend_id == user.id} %>
            <% if friendship_requested.empty? %>
                <% friendship_requested = user.friendships.filter{|friendship| friendship.friend_id == current_user.id} %>
                <% if !current_user.friend?(user) %>
                    <%= form_for(friendship_requested , url: friendship_path(friendship_requested )) do |form| %>
                        <%= render partial: 'friendships/friendship_form', locals: { f: form,  friend: user } %>
                    <% end %>
                <% end %>
            <% end %>

            <%= link_to "Delete", friendship_requested , method: :delete,
                                       data: { confirm: "You sure?" } %>
        <% end %>
    </div>
  </div>